<Window x:Class="SuperImposX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperImposX"
        mc:Ignorable="d"
        Title="SuperImposX" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="GPX:" Margin="3" Padding="3"/>
        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=CurrentFile}" IsReadOnly="True" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Margin="3" />
        <Button Grid.Column="2" Grid.Row="0" Content="Browse..." Margin="3" Padding="3" Width="60" Click="BrowseGPXClick" />
        <Canvas x:Name="TrackCanvas" x:FieldModifier="private" Grid.Column="1" Grid.Row="1" Background="Transparent" />
    </Grid>
</Window>
